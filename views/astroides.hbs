<main>
  <section class="slides">
    <section class="slides-nav"></section>
    <section class="slide is-active"
      style="background: url(https://images.unsplash.com/photo-1445905595283-21f8ae8a33d2?auto=format&fit=crop&w=1504&q=80);">
      <div class="slide__content">
        <figure class="slide__figure">
          <div class="slide__img" style="
              background: url(../images/astroids.jpeg);
              background-size: cover;
            "></div>
        </figure>
        <header class="slide__header" style="overflow-y: scroll;">
          {{#if data}}
          <h2 class="slide__title" style="overflow-y: scroll;">
            <span class="title-line" style="font-size: 0.3em;">
              <form action="/api/astroides" method="POST">
                <input type="text" name="date" placeholder='YYYY-MM-DD' class="mr-2">
                <button type="submit">search</button>
              </form>
            </span>

            <span class="title-line" style="font-size: 0.2em;overflow-y: scroll;">
              <div class="card-body" style="overflow-y: scroll;">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>Reference ID</th>
                      <th>Asteroid Name</th>
                      <th>Nasa Asteroid URL</th>
                      <th>Date Close to Earth</th>
                    </tr>
                  </thead>
                  <tbody>
                    {{#each data}}
                    <tr>
                      <td>{{ this.neo_reference_id }}</td>
                      <td>{{ this.name}}</td>
                      <td><a href="{{this.nasa_jpl_url}};old=0;orb=1;cov=0;log=0;cad=0#orb">{{this.nasa_jpl_url}}</a>
                      </td>
                      <td>{{ this.close_approach_data.[0].close_approach_date }}</td>
                    </tr>
                    {{/each}}
                  </tbody>
                </table>
              </div>
            </span>

          </h2>
          {{else}}
          <h2 class="slide__title">
            <span class="title-line"><span>
                <a href="/api/astroids" style="text-decoration: none; color: inherit;">
                  Asteroids - NeoWs</a>
              </span></span>
            <br />
            <br />
            <span class="title-line" style="font-size: 0.3em;">
              <form action="/api/astroides" method="POST">
                <input type="text" name="date" placeholder='YYYY-MM-DD' class="mr-2">
                <button type="submit">search</button>
              </form>
            </span>
          </h2>
          {{/if}}


        </header>
      </div>
    </section>
  </section>
</main>