<script>
  function updateTextInput(val) {
    document.getElementById('textInput').value = val;
  }
</script>


<form action="/api/rovers" method="POST">
  <input type="radio" name="rover" value="curiosity" style="width: auto;" checked>curiosity</input>
  <input type="radio" name="rover" value="opportunity" style="width: auto;">opportunity </input>
  <input type="radio" name="rover" value="spirit" style="width: auto;">spirit </input>
  <br />
  <input type="range" id="sol" name="solDan" min="0" max="1000" value="0" step="10"
    onchange="updateTextInput(this.value);">
  <input type="text" id="textInput" value="0">
  <label for="sol">Sol</label>
  <br />
