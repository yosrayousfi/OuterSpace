{{#with rover}}
<p>name: {{this.name}}</p>
<p>landing_date: {{this.landing_date}} </p>
<p>launch_date: {{this.launch_date}}</p>
<p>status: {{this.status}}</p>
<p>max_sol: {{this.max_sol}}</p>
